  gem "rspec-rails"
  gem 'rb-inotify', '~> 0.9'
  gem "factory_girl_rails"
  gem "capybara"
  gem "guard-rspec"
  gem "guard-rails"
  gem "guard-livereload"
  gem "rack-livereload"
end

