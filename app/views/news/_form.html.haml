.addnews{'ng-if' => "#{news}.show"}
  .any-form
    .form_close
      %span{'ng-click' => "#{news}.show = false"} X
    %form#news{'ng-submit'=>(news == 'newNews') ? 'createNews()' : 'updateNews(oneNews)', name: 'news_form', 'ng-model' => news, 'novalidate'=>''}
      %span.bold Заголовок новости:
      %br/
      %input.inp.inp-type2{name: 'head', type: 'text', 'ng-model'=>"#{news}.head", 'ng-required' => 'true'}
      .clear
      %span.bold Текст сообщения:
      %br/
      %textarea.inp.inp-type2{name: 'text', 'ng-model'=>"#{news}.text", 'ng-required' => 'true', 'mark-it-up'=>''}
      %br/
      %span.bold Подпись:
      %br/
      %input.inp.inp-type2{name: 'author', type: 'text', 'ng-model'=>"#{news}.author" }
      .clear
      %input.btn.btn-standart{type: 'submit', value: 'Отправить'} 
      %a.btn.btn-standart{'ng-click'=>"sendMaker(#{news})"}
        Текст / HTML


