!!!
/[if IE 7 ] <html lang="ru" class="no-js ie7" ng-app="templeApp">
/[if IE 8 ] <html lang="ru" class="no-js ie8" ng-app="templeApp">
/[if IE 9 ] <html lang="ru" class="no-js ie9" ng-app="templeApp">
/ [if (gt IE 9)|!(IE)]><!
%html.no-js{lang: "ru"}
  / <![endif]
  = render :partial => 'head'

  %body
    .top
    .bottom
    .wrapper{"ng-controller" => "WrapperCtrl", "ng-init" => "initWrapper()", style:"font-size:{{currentFont}}"}
      = render "top"
      .main{class: ("only-content" if @only_content)}
        = render "right" unless @only_content
        .content
          = render "debug_params"
          - unless @only_content
            .path
              = yield :path if content_for? :path 
            %h1
              = content_for?(:pagetitle) ? yield(:pagetitle) : t("#{params[:controller]}.#{params[:action]}.pagetitle")
          = yield
        .fish
      = render "bottom"
  
  
