!!!
/[if IE 7 ] <html lang="ru" class="no-js ie7" ng-app="templeApp">
/[if IE 8 ] <html lang="ru" class="no-js ie8" ng-app="templeApp">
/[if IE 9 ] <html lang="ru" class="no-js ie9" ng-app="templeApp">
/ [if (gt IE 9)|!(IE)]><!
%html.no-js{lang: "ru"}
  / <![endif]
  = render 'shared/head'

  %body
    .top
    .bottom
    .wrapper#wrapper{"ng-controller" => "WrapperCtrl", "ng-init" => "initWrapper(#{flash.present?})", style:"font-size:{{currentFont}}"}
      = render 'shared/top'
      .main{class: ('only-content' if @only_content)}
        = render 'shared/right' unless @only_content
        .content
          = render 'shared/debug_params'
          - unless @only_content
            - if content_for? :path
              .path
                = yield :path
            %h1
              = content_for?(:pagetitle) ? content_for(:pagetitle) : t("#{params[:controller]}.#{params[:action]}.pagetitle")
          = yield
        .fish
      = render 'shared/bottom'
    = render 'shared/counters' #if Rails.env.production?


