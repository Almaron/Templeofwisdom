%table.users-table.ngtable{'ng-table' => 'tableParams', 'template-pagination'=>'custom/pager'}
  %tr.one-line{'ng-repeat' => 'char in $data'}
    %td.center{'data-title' => "'№'", sortable: "'id'", 'header-class'=>'center'}
      {{char.id}}
    %td.line-name{'data-title' => "'Имя'", sortable: "'name'"}
      %span{'ng-click'=>'showChar(char)'} {{char.name}}
    %td{'data-title' => "'Владелец'", sortable: "'owner.name'"}
      %a{href:'/users/{{char.owner.id}}'} {{char.owner.name}}
    %td.center{'data-title' => "'Группа'", sortable: "'group_name'", 'header-class'=>'center'}
      {{char.group_name}}
    %td{'data-title' => "'Зарегистрирован'", sortable: "'createdAt'"}
      {{char.createdAt}}
    %td.center{'data-title' => "'Баллов'", sortable: "'points'", 'header-class'=>'center'}
      {{char.points}}
    %td.line-edit
      %span.user-edit.fa.fa-pencil{'ng-click'=>'editChar(char)', title: 'Редактировать'}
      %span.user-edit.fa.fa-reply.fa-rotate-90{'ng-click'=>'restoreChar(char)', title: 'Восстановить', 'ng-hide'=>'char.status_id < 6'}
      %span.user-edit.fa.fa-times{'ng-click'=>'removeChar(char)', title: 'Удалить', 'ng-hide'=>'char.status_id == 6'}
