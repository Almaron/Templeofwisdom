= content_for :pagetitle do
  = @skill.name

.text-simple
  - if @skill.description.present?
    .skill_description
      = @skill.description.bbcode_to_html_with_formatting
  - if @skill.advice.present?
    %p.advice
      Совет по игре: #{@skill.advice}
  - @skill.skill_levels.each do |skl|
    .skill_level_one
      %a{name: skl.level_id}
      %h4
        = skl.level.name
      = skl.description
      - if skl.techniques.present?
        %p
          %strong
            %em
              Способности:
        = skl.techniques.bbcode_to_html_with_formatting
      - if skl.advice.present?
        %p.advice
          Совет по игре: #{skl.advice}