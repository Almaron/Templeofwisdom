.blog-entry{"ng-repeat" => "post in posts"}
  .blog-entry-title
    .blog-entry-date{} {{post.dateLine}}
    .blog-entry-title-text{} {{post.head}}
  .blog-text{"ng-bind-html"=>"post.content|truncate:400:' [...]'|trustHtml"}
  .blog-author{} {{post.author}}
  .blog-comments
    %a{"ng-click"=>"showPost(post)"} Комментарии({{post.comments.length}})
  .block-adm
    %span.delete{title: "Удалить", "ng-show" => "currentUser.group=='admin'", "ng-click" => "deletePost(post)"} [&#21024;&#38500;]

