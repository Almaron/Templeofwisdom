@app.directive 'fancyGallery', [() ->
  {
    restrict: 'E'
    scope: {
      thumbs: '='
      images: '='
    }
    replace: true
    templateUrl: "<%= asset_path 'fancy_gallery' %>"
    link: (scope, element, attrs) ->
      scope.imageClick = (index) ->
        $.fancybox.open scope.images, {
          parent: 'body'
          index: index
        }

  }
]
