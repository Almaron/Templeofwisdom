@app.directive 'tagPager', ->
    restrict: "E"
    scope:
      tag: "=",
      onset: "&"
    templateUrl: "<%= asset_path "tag_pager" %>"
    replace: true
    transclude: false
    link: (scope, element, attrs) ->

        scope.isCurrent = (index) ->
            scope.tag.current_page is index

        scope.setCurrent = (index) ->
            scope.tag.current_page = index
            if index >= 0
                scope.onset({ page: scope.tag.page_ids[index] })
            return

        return