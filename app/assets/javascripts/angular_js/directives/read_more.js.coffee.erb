@app.directive 'more', ->
  restrict: 'E'
  scope:
    cutText: "@"
  replace: true
  transclude: true
  link: (scope, element, attrs) ->
    scope.cutText = scope.cutText || 'читать дальше'
    scope.show = false
    scope.toggle = ->
      scope.show = !scope.show
      return
    return

  templateUrl: "<%= asset_path "read_more" %>"
