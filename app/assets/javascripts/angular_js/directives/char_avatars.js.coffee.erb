    scope.addAvatar = ->
      $http.post(
        '/char_avatars', {char_avatar: scope.newAvatar}
      ).success (data) ->
        scope.collection.push data

    scope.makeDefault = ->
      $http.put(
        '/char_avatars/'+scope.ngModel
      ).success (data) ->
        scope.collection = data

]